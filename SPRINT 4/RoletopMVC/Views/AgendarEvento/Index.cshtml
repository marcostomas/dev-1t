@model RoletopMVC.ViewModels.AgendarEventoViewModel
    
    <main>
        <h2>Logado Como:</h2>
        <br>
        @Model.NomeUsuario
        <section class="section-container">

            <div class="agendar-evento">
                <p>Agendar Evento</p>
            </div>
            <br />
            <div class="imput_container">
                <label for="name">Nome do Evento</label>
                <br />
                <input id="nome" type="text" maxlength="30" minlength="3" value="@Model.Cliente.NomeEvento">

                <br />
                <br />

                <label for="dataevento"> Data do Evento</label>
                <br />
                <input id="date" type="date" value="@Model.Cliente.DataEvento" />

                <br />
                <br />

                <label for="horainicio"> Hora de Início</label>
                <br />
                <input id="hora1" type="time" value="@Model.Cliente.HoraInicio"/>

                <div class="double-field">
                <div>
                    <label for="tipoevento">Tipo de Evento</label>
                    <select id="tipodeevento" name="tipoevento" required>
                        <option value="" disabled selected>Selecione</option>
                        @foreach (var tipoevento in Model.Eventos)
                        {
                            <option value=@tipoevento.Nome>@tipoevento.Nome </option>
                        }
                    </select>
                </div>
                </div>

                <label for="obs"> Observações (Nos diga como será o seu evento)</label>
                <br />
                <input id="obs" type="text" minlength="2">

                <br />
                <br />

                <label for="obs"> Nome Completo dos Participantes</label>
                <br />
                <input id="participantes" type="text" minlength="3">
            </div>
            
            <div class="finalizar">
                <a href="end.html"> Finalizar!</a>
            </div>
        </section>
    </main>
@model RoletopMVC.ViewModels.PedidoViewModel
    
    <main>
        <h2>Logado Como:</h2>
        <br>
        @Model.NomeUsuario
        <section class="section-container">

            <div class="agendar-evento">
                <p>Agendar Evento</p>
            </div>
            <br />
            <div class="imput_container">
                <label for="nome"> Nome do Evento</label>
                <br />
                <input id="nome" type="text" maxlength="60" minlength="3" value="@Model.Evento.Nome" name="nome">

                <br />
                <br />

                <label for="data"> Data do Evento</label>
                <br />
                <input id="data" type="date" value="@Model.Evento.DataDoEvento" name="data" />

                <br />
                <br />

                <label for="hora"> Hora de Início</label>
                <br />
                <input id="hora" type="time" value="@Model.Evento.HoraDoEvento" name="hora">

                <br />
                <br />

                <label for="observacoes"> Observações</label>
                <br />
                <input id="observacoes" type="text" value="@Model.Evento.Observacoes" name="observacoes"/>

                <br />
                <br />

                <label for="nomeParticipantes"> Nome dos Participantes</label>
                <br />
                <input id="nomeParticipantes" type="text" value="@Model.Evento.NomeParticipantes" name="nomeParticipantes"/>

                <br />
                <br />

                <div class="double-field">
                    <div>
                        <label for="tipoevento"> Tipo de Evento</label>
                        <select id="tipoevento" name="tipoevento" required>
                            
                            <option value="" disabled selected>Selecione</option>
                            
                            @foreach (var tipoevento in Model.Evento)
                            {
                                <option value=@tipoevento.Nome> @tipoevento.Nome </option>
                            }
                        </select>
                    </div>
                </div>

                <label for="obs"> Observações (Nos diga como será o seu evento)</label>
                <br />
                <input id="obs" type="text" minlength="2">

                <br />
                <br />

                <label for="obs"> Nome Completo dos Participantes</label>
                <br />
                <input id="participantes" type="text" minlength="3">
            </div>
            
            <div class="finalizar">
                <a href="end.html"> Finalizar!</a>
            </div>
        </section>
    </main>